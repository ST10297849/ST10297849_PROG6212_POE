@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<h2>Lecturer Dashboard</h2>

<div>
    <h3>Submit New Claim</h3>
    <form method="post">
        <label>Hours Worked:</label>
        <input type="number" name="hoursWorked" /><br />

        <label>Hourly Rate:</label>
        <input type="number" name="hourlyRate" /><br />

        <label>Upload Supporting Document:</label>
        <input type="file" name="supportingDocument" /><br />

        <button type="submit">Submit Claim</button>
    </form>
</div>

<div>
    <h3>Claim Status Tracker</h3>
    <table>
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Status</th>
                <th>Submission Date</th>
            </tr>
        </thead>
